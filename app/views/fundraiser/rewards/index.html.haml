.row
  .span12
    %h1
      Total Contribution: #{number_to_currency Fundraiser::Contribution.total_contributed}
      of #{number_to_currency Fundraiser::Settings.funding_goal} until #{Fundraiser::Settings.funding_end_date}
    %h2 Backed by #{Fundraiser::Contribution.count} people

.row
  .span6
    .buy
      %form#payment-form.form-horizontal{:action => '/contributions.js', :method => "POST", "data-remote" => 'true'}
        .control-group.payment-errors
        .control-group
          %label.control-label Name
          .controls
            %input.name{:size => "20", :type => 'text', :name => 'contributor[name]'}/
        .control-group
          %label.control-label Email
          .controls
            %input.email{:size => "20", :type => 'text', :name => 'contributor[email]'}/
        .control-group
          %label.control-label Reward
          .controls
            = select_tag 'contributor[amount]', options_from_collection_for_select(@rewards, "amount", "title")
        .control-groupi
          %label.control-label Card Number
          .controls
            %input.card-number{:autocomplete => "off", :size => "20", :type => "text"}/
        .control-group
          %label.control-label CVC
          .controls
            %input.card-cvc.span1{:autocomplete => "off", :size => "4", :type => "text"}/
        .control-group
          %label.control-label Expiration (MM/YYYY)
          .controls
            %input.card-expiry-month.span1{:size => "2", :type => "text"}/
            %input.card-expiry-year.span1{:size => "4", :type => "text"}/
        .control-group
          %button.submit-button.btn{:type => "submit"} Submit Payment
  .span4
    %h3 Choose a Reward
    #rewards
      = render @rewards
